{
  "compilerOptions": {
    "target": "ESNext",

    "module": "ESNext",
    "moduleResolution": "Node",

    "lib": ["DOM", "DOM.Iterable"],
    "removeComments": true,
    "declaration": true,

    "outDir": "lib",
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,

    "paths": {
      "@jvllmr/*": ["./packages/*/src"]
    }
  },
  "include": ["packages/**/src"],
  "exclude": ["node_modules"],
  "compileOnSave": true
}
