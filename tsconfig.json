{
  "compilerOptions": {
    "target": "es5",

    "module": "CommonJS",
    "lib": ["DOM", "DOM.Iterable"],
    "removeComments": true,
    "declaration": true,
    "moduleResolution": "node",
    "outDir": "./lib",

    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "strict": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.test.ts"],
  "compileOnSave": true
}
